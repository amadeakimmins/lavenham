<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    {{ 'main.css' | asset_url | stylesheet_tag: preload: true }}
    {{ 'main-mobile.css' | asset_url | stylesheet_tag: preload: true }}
    {{ 'navigation.css' | asset_url | stylesheet_tag: preload: true }}

    <script async="async" src="{{ 'utils.js' | asset_url }}"></script>

    {% if settings.favicon %}
      <link rel="shortcut icon" href="{{ settings.favicon | image_url: width: 32 }}" type="image/png">
    {% endif %}

    <title>{{ page_title | escape }}</title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {{ "swiper.min.css" | asset_url | stylesheet_tag }}
    {{ "base.css" | asset_url | stylesheet_tag}}
    {{ "main.css" | asset_url | stylesheet_tag }}
    {{ "main-mobile.css" | asset_url | stylesheet_tag }}

    {% render "social-meta-tags" %}
    {{ settings.gtmHeadTag }}
    {{ content_for_header }}
  </head>

  <body class="template" data-template="{%if template != nil %}{{ template }}{% else %}{{ page_title }}{% endif %}">
    {{ settings.gtmBodyTag }}
    <div class="page-content">
      {% if template contains 'index' %}
        {% section "announcement-bar" %}
      {% endif %}
      {% section "header" %}
      {% section "my-cart" %}

      <main id="main" role="main">
        {{ content_for_layout }}
      </main>

      {% section "footer" %}
    </div>

    <script>
      window.routes = {
        cart_add_url: "{{ routes.cart_add_url }}",
        cart_change_url: "{{ routes.cart_change_url }}",
        cart_update_url: "{{ routes.cart_update_url }}"
      };

      window.cartStrings = {
        error: "{{ 'sections.cart.cart_error' | t }}",
        quantityError: "{{ 'sections.cart.cart_quantity_error_html' | t }}"
      }

      window.variantStrings = {
        addToCart: "{{ 'products.product.add_to_cart' | t }}",
        soldOut: "{{ 'products.product.sold_out' | t }}",
        unavailable: "{{ 'products.product.unavailable' | t }}"
      }
    </script>

    <script type="application/json" data-ajax-cart-initial-state>{{ cart | json }}</script>

    <script type="module">
      import '{{ "liquid-ajax-cart.js" | asset_url }}';
    </script>
    <script src="{{ 'enter-view.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'lazyload.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'swiper.min.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'main.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'navigation.js' | asset_url }}" defer="defer"></script>

  </body>
</html>