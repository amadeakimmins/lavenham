<section class="featured-collection">
  <div class="featured-collection__copy-wrapper">
    <h2 class="featured-collection__title h4 reveal">
      {{ section.settings.title | default: "Featured products"}}
    </h2>

    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link | default: '#' }}" class="button button--link" aria-label="{{ section.settings.button_label }}">
        <span>{{- section.settings.button_label | escape -}}</span>
      </a>
    {% endif %}
  </div>
  <div class="featured-collection__slider swiper reveal" id="featuredCollectionSlider">
    <div class="swiper-wrapper">
      {% for product in section.settings.collection.products %}
        <div class="swiper-slide featured-collection__slide">
          {% render 'product-card', product: product, showATC: false %}
        </div>
      {% endfor %}
    </div>
  </div>

  {%- comment -%}
    <div class="landing__navigation">
    <div class="swiper-button-prev swiper-featured-collection-button-prev">
    {% render 'icon-arrow-left' %}
    </div>
    <div class="swiper-button-next swiper-featured-collection-button-next">
    {% render 'icon-arrow-right' %}
    </div>
    </div>
  {%- endcomment -%}
</section>

{% schema %}
  {
    "name": "Featured Collection",
    "settings": [
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "text",
        "label": "Title",
        "id": "title"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "text",
        "label": "Button Label",
        "id": "button_label"
      }, {
        "type": "url",
        "label": "Button Link",
        "id": "button_link"
      }
    ],
    "presets": [
      {
        "name": "Featured Collection"
      }
    ]
  }
{% endschema %}