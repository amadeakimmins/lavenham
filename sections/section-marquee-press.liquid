<section class="marquee-press" id="marquee">
  <div class="heading__content-wrapper">
    {% if section.settings.title != blank %}
      <h2 class="heading__title h4 reveal">{{ section.settings.title }}</h2>
    {% endif %}
  </div>

  {% if section.blocks.size > 0 %}
    <div class="marquee-press__track-container reveal">
      <div class="marquee-press__track">
        {% for i in (1..3) %}
          {% for block in section.blocks %}
            <div class="marquee-press__item">
              {% if block.settings.image %}
                <a href="{{ block.settings.link | default: '#' }}" class="marquee-press__logo aspectholder">
                  <img src="{{ block.settings.image | image_url: width: 700 }}" alt="Press Logo">
                </a>
              {% endif %}
              {% if block.settings.text != blank %}
                <p class="marquee-press__text text-italic">"{{ block.settings.text }}"</p>
              {% endif %}
            </div>
          {% endfor %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Press Marquee",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "And in the press"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image Selector"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Press Marquee"
    }
  ]
}
{% endschema %}
